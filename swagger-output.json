{
  "openapi": "3.0.0",
  "info": {
    "version": "3.0.0",
    "title": "SKLLUX API",
    "description": "The API for Skillux app"
  },
  "servers": [
    {
      "url": "http://localhost:5050/"
    }
  ],
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "description": "Register endpoint",
        "responses": {
          "200": {
            "description": "When registering is successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponseDto"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "description": "Register endpoint",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterDto"
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "description": "Login endpoint",
        "responses": {
          "200": {
            "description": "When login is successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/forgot-password": {
      "post": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/reset-password/{token}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/v1/auth/reset-password": {
      "post": {
        "description": "",
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "password": {
                    "example": "any"
                  },
                  "token": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/change-password": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newPassword": {
                    "example": "any"
                  },
                  "oldPassword": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/auth/refresh-token": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 2
          },
          "fullName": {
            "type": "string",
            "example": "John Doe"
          },
          "username": {
            "type": "string",
            "example": "john12"
          },
          "email": {
            "type": "string",
            "example": "john12@gmail.com"
          },
          "isAdmin": {
            "type": "boolean",
            "example": false
          },
          "profilePicture": {},
          "updatedAt": {
            "type": "string",
            "example": "2024-05-24T17:19:47.472Z"
          },
          "createdAt": {
            "type": "string",
            "example": "2024-05-24T17:19:47.472Z"
          },
          "profession": {},
          "password": {
            "type": "string",
            "example": "$2b$10$V7c9I6/P5nh79jfg7F8B9urb4K0wxpgR6rEIAKo9fny9F4f2T6OrW"
          },
          "birth": {
            "type": "string",
            "example": "2011/12/23"
          }
        },
        "required": [
          "fullName",
          "username",
          "email",
          "password",
          "birth"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "john12"
          },
          "password": {
            "type": "string",
            "example": "passer123"
          },
          "email": {
            "type": "string",
            "example": "john12@gmail.com"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "LoginResponseDto": {
        "type": "object",
        "properties": {
          "success": {
            "type": "string",
            "example": "Login successful"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": 2
              },
              "fullName": {
                "type": "string",
                "example": "John Doe"
              },
              "username": {
                "type": "string",
                "example": "john12"
              },
              "email": {
                "type": "string",
                "example": "john12@gmail.com"
              },
              "isAdmin": {
                "type": "boolean",
                "example": false
              },
              "profilePicture": {}
            }
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MiwidXNlcm5hbWUiOiJoZWxsZmVlZm8iLCJlbWFpbCI6Im91c3NleW5vdTc4MTIyN0BnbWFpbC5jb20iLCJpc0FkbWluIjpmYWxzZSwiaWF0IjoxNzE2NTY5OTYwLCJleHAiOjE3MTY1NzA4NjB9.B7zHEPJdosR0JAhHHtJpcYXPRvnfLxrNtqGJ48RVT0Y"
          },
          "expire": {
            "type": "string",
            "example": "15m"
          }
        }
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "john12"
          },
          "fullName": {
            "type": "string",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "example": "passer123"
          },
          "email": {
            "type": "string",
            "example": "john12@gmail.com"
          },
          "birth": {
            "type": "string",
            "example": "2012-04-04"
          }
        }
      },
      "RegisterResponseDto": {
        "type": "object",
        "properties": {
          "success": {
            "type": "string",
            "example": "Registration successful"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      }
    }
  }
}